{
    "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "mocha": true
    },
    "globals": {
      "global": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "prefer-arrow-callback": [
        "error"
      ],
      "prefer-const": [
        "error"
      ]
    }
}
