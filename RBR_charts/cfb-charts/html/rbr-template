<!-- page prep -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.5.0/chart.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@2"></script>
<script src="https://couchux.github.io/RBR_charts/cfb-charts/js/chart-builder.js"></script>
<link rel="stylesheet" href="https://couchux.github.io/RBR_charts/cfb-charts/css/main.css">

<!-- Running the charts -->
<script>
let data = 'https://couchux.github.io/RBR_charts/cfb-charts/json/all-games.json';
let game = '2020-12-19 Alabama at Florida';

fetch(data).then(response => response.json()).then(data => { 
        
// line charts
teamLines(data,game,'srxr-lines-team')
playMap(data,game,'play-map',1)
playMap(data,game,'play-map-opp',2)
typeLines(data,game,'sr-lines',1)
typeLines(data,game,'sr-lines-opp',2)
rushRate(data,game,'rush-rate',1)
rushRate(data,game,'rush-rate-opp',2)

// bar charts
srXrTeams(data,game,'srxr-team')
srXrBars(data,game,'srxr-play-type','','play_type')
srXrBars(data,game,'srxr-quarter','','quarter')
srXrBars(data,game,'srxr-down','','down')
srXrBars(data,game,'srxr-red-zone','','red_zone')

// player charts
players(data,game,'rushers',1,'rusher')
players(data,game,'rushersOpp',2,'rusher')
players(data,game,'passers',1,'passer')
players(data,game,'passersOpp',2,'passer')
players(data,game,'receivers',1,'receiver')
players(data,game,'receiversOpp',2,'receiver')

});</script>


<!-- then Individual charts in their own sections-->

<!-- Team overview -->
<div class="chart"><canvas id="srxr-lines-team" width="400" height="250"></canvas></div>
<div class="chart"><canvas id="srxr-team" width="400" height="250"></canvas></div>

<!-- SR over time -->
<input type="checkbox" id="mapSwitch" /><label id="mapSwitchLabel" style="display: none" class="switchBtn" for="mapSwitch">Switch Team</label>
<div class="chart teamOne"><canvas id="sr-lines" width="400" height="250"></canvas></div>
<div class="chart teamTwo"><canvas id="sr-lines-opp" width="400" height="250"></canvas></div>
<input type="checkbox" id="mapSwitch" /><label id="mapSwitchLabel" class="switchBtn" for="mapSwitch">Switch Team</label>

<!-- Rush tate over time -->
<div class="chart teamOne"><canvas id="rush-rate" width="400" height="250"></canvas></div>
<div class="chart teamTwo"><canvas id="rush-rate-opp" width="400" height="250"></canvas></div>
<input type="checkbox" id="mapSwitch" /><label id="mapSwitchLabel" class="switchBtn" for="mapSwitch">Switch Team</label>

<!-- Play Maps -->
<div class="chart teamOne"><canvas id="play-map" width="400" height="250"></canvas></div>
